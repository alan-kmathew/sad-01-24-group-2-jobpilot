
pipeline {
    agent any
   
   environment {
        HEROKU_API_KEY = credentials('heroku-api-key')
    }

    stages {
        stage('Build') {
            steps {
                dir('Backend/online-job-service') {
                     bat 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                     dir('Backend/online-job-service') {
                        bat 'npm run test'
                     }
                }
            }
            post {
                failure {
                    error 'Tests failed, stopping pipeline'
                }
            }
        }
        stage('Deploy') {
            steps {
                 dir('Backend/online-job-service') {
                        script {
                            withCredentials([string(credentialsId: 'heroku-api-key', variable: 'HEROKU_API_KEY')]) {
                                bat '"C:\\Program Files\\Heroku\\bin\\heroku" auth:token'                  
                                bat '"C:\\Program Files\\Heroku\\bin\\heroku" container:login'
                                bat '"C:\\Program Files\\Heroku\\bin\\heroku" container:push web --app online-job-service'
                                bat '"C:\\Program Files\\Heroku\\bin\\heroku" container:release web --app online-job-service' 
                            }

                        }
                    }
                }
            }
       
        }
    }